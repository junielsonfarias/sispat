{
  "name": "sispat-backend",
  "version": "1.0.0",
  "description": "Backend do Sistema Integrado de Patrim√¥nio",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node --transpile-only src/index.ts",
    "build": "tsc",
    "build:prod": "tsc && npm run prisma:generate",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "ts-node --compiler-options \"{\\\"module\\\":\\\"commonjs\\\",\\\"types\\\":[\\\"node\\\"]}\" src/prisma/seed.ts",
    "prisma:seed:prod": "node dist/prisma/seed.js",
    "prisma:reset": "prisma migrate reset",
    "optimize:indexes": "node scripts/apply-optimization-indexes.js",
    "optimize:analyze": "node scripts/apply-optimization-indexes.js --analyze",
    "optimize:queries": "node scripts/optimize-database-queries.js",
    "optimize:db": "bash scripts/optimize-database.sh",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "echo \"No linting configured\"",
    "clean": "rm -rf dist",
    "deploy:build": "npm run clean && npm run build:prod",
    "deploy:check": "npm run lint"
  },
  "keywords": [
    "patrimonio",
    "gestao",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "@sentry/node": "^10.19.0",
    "@sentry/profiling-node": "^10.19.0",
    "@sentry/react": "^10.19.0",
    "@types/handlebars": "^4.0.40",
    "@types/nodemailer": "^7.0.2",
    "@types/socket.io": "^3.0.1",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "browser-image-compression": "^2.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.9",
    "rate-limit-redis": "^4.2.2",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.7.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.17.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
